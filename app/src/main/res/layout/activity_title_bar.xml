<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp"
    android:orientation="horizontal" android:paddingLeft="5dp"
    android:paddingTop="15dp"
    android:background="@color/colorPrimary"
    android:weightSum="1">

    <ImageView android:src="@mipmap/ic_launcher"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginRight="2dp"
        android:id="@+id/appIcon"/>

    <TextView android:id="@+id/titleBar" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/appIcon"
        android:layout_toRightOf="@+id/appIcon"
        android:layout_toEndOf="@+id/appIcon"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/networkLabel"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Aucun RÃ©seau"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:paddingTop="3dp"
        android:paddingLeft="8dp"
        android:background="@drawable/border_color_red"
        android:layout_alignBottom="@+id/titleBar"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>